@import 'settings/colors';

body {
  background: url('../images/layout/background-site.jpg');
  background-size: cover;
  background-position: center center;
}

section.error-status {
  width: 100%;
  height: 100vh;
  max-width: 300px;

  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin: 0 auto;

  color: white;
  font-family: 'Courier New', Courier, monospace;

  h1 {
    font-size: 3rem;
  }

  p {
    margin: 1rem 0;
    text-align: center;
  }

  .btn {
    background-color: $red;
    color: $white;
    font-size: 1.2rem;
    position: relative;

    &::before {
      content: '$';
      padding-right: .5rem;
    }

    &::after {
      content: '_';
      padding-left: .5rem;
    }
  }
}
