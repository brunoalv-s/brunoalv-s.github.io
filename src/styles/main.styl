@import 'settings/colors';
@import 'tools/*';
@import 'generic/*';


body {
  background: $color1;
}

.home-video {
  position: fixed;
  display: block;
  min-width: 100%;
  min-height: 100%;
  z-index: 1;
  opacity: .2;

  &::-internal-media-controls-overlay-cast-button {
    display: none;
  }
}

header {
  position: relative;
  z-index: 9;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  &.loading {
    position: absolute;
    transition: all 1s ease;
    height: 100vh;
  }

  &.loadDone {
    position: relative;
    transition: all 1s ease;
    height: 0vh;
    min-height: 100px;
  }

  .logo {
    padding: 1rem;
  }
}


section {
  position: relative;
  min-height: 300px;

  &.div1 {
    background: yellow;
  }

  &.div2 {
    background: blue;
  }
}
