  meta(name="theme-color", content="#181616")
  title {% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}

  link(rel="shortcut icon", type="image/png", href="/assets/img/layout-img/icon.png")
  link(rel="canonical", href="https://brunoalves.info")

  link(rel="stylesheet", type="text/css", href="/assets/css/main.css")
  link(rel="stylesheet", type="text/css", href="/assets/css/default.css")
