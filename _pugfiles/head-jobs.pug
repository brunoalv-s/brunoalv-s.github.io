head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  meta(name="description", content="{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}")
  meta(name="robots", content="follow")
  meta(name="theme-color", content="#181616")
  title {% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}

  link(rel="shortcut icon", type="image/png", href="/assets/img/layout-img/icon.png")
  style.
    header {
      width: 100%;
      background: url(../assets/images/layout-img/background-jobs.jpg) no-repeat;
      background-size: cover;
      display: flex;
      justify-content: space-around;
      align-items: center;
      border-bottom: 0.5em solid;
    }
